{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compileOnSave": false,
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": [ "ESNext", "DOM" ],
    "target": "esnext",
    "outDir": "js",
    "declarationDir": "target/types",
    "declaration": true,
    // rules
    "strict": true,
    "verbatimModuleSyntax": true,
    "erasableSyntaxOnly": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
  },
  "include": [
    "./src"
  ]
}
